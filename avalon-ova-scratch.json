{
  "variables": {
    "avalon_version": "6.0",
    "centos_version": "7",
    "centos_iso_url": "http://mirror.cs.vt.edu/pub/CentOS/7/isos/x86_64/CentOS-7-x86_64-DVD-1511.iso",
    "centos_iso_checksum": "c875b0f1dabda14f00a3e261d241f63e"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc>",
        "<wait>linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/avalon-centos-{{user `centos_version`}}.ks<enter>"
      ],
      "disk_size": 500000,
      "guest_additions_mode": "disable",
      "guest_os_type": "RedHat_64",
      "http_directory": "kickstart",
      "iso_url": "{{user `centos_iso_url`}}",
      "iso_checksum": "{{user `centos_iso_checksum`}}",
      "iso_checksum_type": "md5",
      "format": "ova",
      "headless": true,
      "output_directory": "output/avalon_box",
      "shutdown_command": "sudo shutdown -P now",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_pty" : "true",
      "ssh_wait_timeout": "20m",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "3072"],
        ["modifyvm", "{{.Name}}", "--vram", "16"]
      ],
      "vboxmanage_post": [
        ["modifyvm", "{{.Name}}", "--nic1", "nat"],
        ["guestproperty", "set", "{{.Name}}", "/VirtualBox/GuestAdd/Vbgl/Video/SavedMode", "1024x768x32"]
      ],
      "vm_name": "Avalon Media System {{user `avalon_version`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/install_docker.sh"
    },
    {
      "type": "shell",
      "inline": [
        "yum install -y git",
        "git clone --branch=master --depth=1 https://github.com/avalonmediasystem/avalon-docker.git"
      ]
    },
    {
      "type": "file",
      "source": ".env",
      "destination": "avalon-docker/.env"
    },
    {
      "type": "file",
      "source": "avalon-docker.service",
      "destination": "/etc/systemd/system/avalon-docker.service"
    },
    {
      "type": "shell",
      "inline": [
        "systemctl enable /etc/systemd/system/avalon-docker.service",
        "cd avalon-docker",
        "docker-compose pull"
      ]
    },
    {
      "type": "shell",
      "script": "scripts/avalon_cleanup.sh"
    }
  ]
}
